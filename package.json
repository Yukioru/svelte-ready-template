{
  "name": "svelte-ready-template",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "format": "prettier --write --plugin-search-dir=. '{public,src}/**/*.{css,html,js,svelte}'",
    "lint": "eslint --fix --quiet src --ext .js,.svelte",
    "lint:css": "stylelint --fix --quiet **/*.{css,html,svelte,svg}",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit \"$1\"",
    "pre-commit": "npx --no-install lint-staged"
  },
  "lint-staged": {
    "*.{svelte,js}": "npm run lint",
    "*.{svelte,js,css}": "npm run format",
    "*.{svelte,css}": "npm run lint:css"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.22",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.4.0",
    "simple-git-hooks": "^2.6.1",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "svelte": "^3.42.4",
    "vite": "^2.5.6"
  },
  "peerDependencies": {
    "@sveltejs/vite-plugin-svelte": "1.x",
    "vite": "2.5.x"
  }
}
